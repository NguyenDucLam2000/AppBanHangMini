<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">

        <TextView
            android:text="Cần điền tất cả các mục"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtHoTenDangKy"
                android:hint="Họ tên đầy đủ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.appbanhangmini.CustomView.ClearEditText
                android:id="@+id/edtDiaChiEmailDangKy"
                android:hint="Địa chỉ email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.appbanhangmini.CustomView.EyeEditText
                android:layout_width="match_parent"
                android:id="@+id/edtMatKhauDangKy"
                android:hint="Mật khẩu"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.appbanhangmini.CustomView.EyeEditText
                android:layout_width="match_parent"
                android:id="@+id/edtXacNhanMatKhau"
                android:hint="Xác nhận mật khẩu"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <Switch
            android:layout_marginTop="15dp"
            android:text="Tôi muốn nhận các khuyến mãi độc quyền qua email"
            android:id="@+id/swNhanKhuyenMai"
            android:layout_width="wrap_content"
            android:checked="true"
            android:thumbTint="#F67122"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDangKy"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:background="#F67122"
            android:layout_gravity="center_horizontal"
            android:text="Đăng ký"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:text="Tôi đã đọc và hiểu rõ các điều khoản bảo mật"
            android:textSize="14dp"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Hoặc đăng ký bằng"
            android:textColor="#000"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnDangKyVoiFacebook"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="Facebook"
                android:textColor="#4a6ea9"
                android:background="@drawable/custom_background_facebook"
                android:drawableLeft="@drawable/facebookiconsmall"
                android:textAllCaps="false"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDangKyVoiGoogle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="Google"
                android:background="@drawable/custom_background_google"
                android:textColor="#da4835"
                android:drawableLeft="@drawable/googleplussmall"
                android:textAllCaps="false"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
